package sni:cli@0.1.0;

interface language {
    use compiler.{compiler};

    resource language {
        /// The name of the language interface.
        name: func() -> string;

        /// Select a compiler for this language, return the index.
        select-compiler: func(compiler: list<borrow<compiler>>) -> option<u64>;

        /// Run the compiler.
        run: func(args: list<string>, compiler: compiler) -> result<_, string>;
    }
}